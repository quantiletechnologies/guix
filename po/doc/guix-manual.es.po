#. type: item
#: guix-git/doc/guix.texi:29888
#, no-wrap
msgid "@code{class} (default: @code{\"IN\"})"
msgstr "@code{class} (predeterminada: @code{\"IN\"})"

#. type: table
#: guix-git/doc/guix.texi:29891
