#. type: section
#: guix-git/doc/guix.texi:14566
#, no-wrap
msgid "Invoking @command{guix graph}"
msgstr "Invocación de @command{guix graph}"

#. type: cindex
#: guix-git/doc/guix.texi:14568
#, no-wrap
msgid "DAG"
msgstr "GAD (DAG en inglés)"

#. type: command{#1}
#: guix-git/doc/guix.texi:14569
#, no-wrap
msgid "guix graph"
msgstr "guix graph"

