#: guix-git/doc/guix-cookbook.texi:2174
msgid "@file{/dev/sdb}: swap"
msgstr ""

#. type: itemize
#: guix-git/doc/guix-cookbook.texi:2177
msgid "Root device: @file{/dev/sda}"
msgstr ""

